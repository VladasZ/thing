{
  "show_edit_predictions": false,
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
      "enable_thinking": false,
    },
    "favorite_models": [],
    "model_parameters": [],
  },
  "ssh_connections": [
    {
      "host": "pc1",
      "args": [],
      "projects": [
        {
          "paths": ["/home/vladas/dev/petuh"],
        },
        {
          "paths": ["/home/vladas/dev/thing"],
        },
        {
          "paths": ["/home/vladas/dev/neuro"],
        },
        {
          "paths": ["/mnt/raid4TB/local"],
        },
        {
          "paths": ["/mnt/raid4TB/services/icarus"],
        },
        {
          "paths": ["/mnt/raid4TB/services/jellyfin"],
        },
        {
          "paths": ["/mnt/raid4TB/services/l2"],
        },
        {
          "paths": ["/mnt/raid4TB/services/valheim"],
        },
      ],
    },
  ],

  "notification_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "auto_update": true,
  "disable_ai": false,

  "autosave": {
    "after_delay": {
      "milliseconds": 200,
    },
  },
  "format_on_save": "on",

  "languages": {
    "C": {
      "format_on_save": "on",
    },
    "C++": {
      "format_on_save": "on",
    },
  },

  "close_on_file_delete": true,
  "hover_popover_enabled": true,

  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_font_family": "0xProto Nerd Font Mono",

  "theme": {
    "mode": "system",
    "light": "Stark Light",
    "dark": "Visual Studio Code Dark Modern",
  },

  "icon_theme": {
    "mode": "system",
    "light": "JetBrains New UI Icons (Light)",
    "dark": "JetBrains New UI Icons (Dark)",
  },

  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": true,
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "off",
  },

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false,
  },

  "status_bar": {
    "active_language_button": false,
    "cursor_position_button": false,
    "line_endings_button": false,
  },

  "auto_indent": true,
  "auto_indent_on_paste": true,
  "auto_install_extensions": {
    "nu": true,
    "lua": true,
    "xml": true,
    "sql": true,
    "make": true,
    "toml": true,
    "rust": true,
    "java": true,
    "wgsl": true,
    "proto": true,
    "neocmake": true,
    "cargo-tom": true,
    "dockerfile": true,
    "git-firefly": true,
    "docker-compose": true,
  },

  "auto_signature_help": true,

  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },

  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": null,
  },

  "terminal": {
    "font_size": 14,
    "default_width": 640,
    "default_height": 320,
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default",
      },
    },
    "env": {},
    "line_height": "comfortable",
    "shell": {
      "program": "nu",
    },
    "scroll_multiplier": 3.0,
    "toolbar": {
      "breadcrumbs": false,
    },
  },

  "project_panel": {
    "default_width": 240,
    // Spacing between worktree entries in the project panel. Can be 'comfortable' or 'standard'.
    "entry_spacing": "standard",
    // Amount of indentation for nested items.
    "indent_size": 18,
    // Whether to reveal it in the project panel automatically,
    // when a corresponding project entry becomes active.
    // Gitignored entries are never auto revealed.
    "auto_reveal_entries": true,
    "show_diagnostics": "off",
    // Whether to hide the root entry when only one folder is open in the window.
    "hide_root": true,
  },

  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
      },
      "enable_lsp_tasks": true,
    },
    "cargo-tom": {
      "initialization_options": {
        "per_page": 25,
        "feature_display_mode": "UnusedOpt",
        "hide_docs_info_message": false,
        "sort_format": true,
        "stable_version": true,
        "offline": false,
      },
    },
  },
}
