{
  "ssh_connections": [
    {
      "host": "pc1",
      "args": [],
      "projects": [
        {
          "paths": ["/home/vladas"],
        },
        {
          "paths": ["/home/vladas/dev/thing/./"],
        },
        {
          "paths": ["/mnt/raid4TB/services/./"],
        },
        {
          "paths": ["/mnt/raid4TB/services/l2"],
        },
      ],
    },
  ],

  "notification_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "auto_update": true,
  "disable_ai": true,

  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "close_on_file_delete": true,

  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_font_family": "0xProto Nerd Font Mono",
  "theme": {
    "mode": "system",
    "light": "Stark Light",
    "dark": "Visual Studio Code Dark Modern",
  },

  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "off",
  },

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true,
  },

  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": true,
    "line_endings_button": false,
  },

  "auto_indent": true,
  "auto_indent_on_paste": true,
  "auto_install_extensions": {
    "nu": true,
    "lua": true,
    "make": true,
    "toml": true,
    "rust": true,
    "dockerfile": true,
    "docker-compose": true,
  },

  "auto_signature_help": true,

  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },

  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": null,
  },

  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "keep_selection_on_copy": true,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default",
      },
    },
    "env": {},
    "line_height": "comfortable",
    "minimum_contrast": 45,
    "option_as_meta": false,
    "button": true,
    "shell": {
      "program": "/opt/homebrew/bin/nu",
    },
    "scroll_multiplier": 3.0,
    "toolbar": {
      "breadcrumbs": false,
    },
    "working_directory": "current_project_directory",
    "scrollbar": {
      "show": null,
    },
  },
}
